@model IEnumerable<WebProjesi.Models.Hizmet>

@{
    ViewData["Title"] = "Hizmet Listesi";
}

<div class="container mt-5">
    <!-- زر الإضافة في أعلى اليمين -->
    <div class="d-flex justify-content-end mb-3">
        <a asp-controller="Hizmet" asp-action="Ekle" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Yeni Hizmet Ekle
        </a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="card shadow-sm border-0">
                        <!-- اسم الخدمة في العنوان -->
                        <div class="card-header bg-primary text-white text-center">
                            <h5 class="card-title mb-0">
                            @item.HizmetAdi
                            </h5>
                        </div>

                        <!-- صورة الخدمة -->
                        <img src="@item.ImageURL" alt="@item.HizmetAdi" class="card-img-top" style="height: 200px; object-fit: cover;">

                        <!-- تفاصيل الخدمة -->
                        <div class="card-body">
                        <p class="card-text"><b>Hizmet Adi: <b>@item.HizmetAdi</b> </b></p>
                            <p class="card-text"><b>Açıklama: </b>@item.Aciklama</p>
                            <p class="card-text"><b>Süre: </b>@item.Sure dakika</p>
                            <p class="card-text"><b>Ücret: </b>@item.Ucret.ToString("F0") TL</p>
                        </div>

                        <!-- أزرار التعديل والحذف -->
                        <div class="card-footer d-flex justify-content-between">
                            <a asp-controller="Hizmet" asp-action="Guncelle" asp-route-id="@item.HizmetID" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-fill"></i> Düzenle
                            </a>
                            <a asp-controller="Hizmet" asp-action="Sil" asp-route-id="@item.HizmetID" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Sil
                            </a>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>
