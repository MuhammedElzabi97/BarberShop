@using Microsoft.AspNetCore.Identity
@inject SignInManager<WebProjesi.Models.Kullanici> SignInManager
@inject UserManager<WebProjesi.Models.Kullanici> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Hesap" asp-action="Logout" method="post" class="form-inline">
        <span class="me-2">Hello, @User.Identity.Name!</span>
        <button type="submit" class="btn btn-link text-dark">Logout</button>
    </form>
}
else
{
    <a class="btn btn-link text-dark" asp-area="" asp-controller="Hesap" asp-action="Login">Login</a>
    <a class="btn btn-link text-dark" asp-area="" asp-controller="Hesap" asp-action="Register">Register</a>
}
