@model IEnumerable<WebProjesi.Models.Randevu>

<div class="container mt-4">
    <h1 class="text-center mb-4">Randevularım</h1>

    <div class="d-flex justify-content-end mb-3">
        <a href="/Randevu/Index" class="btn btn-primary">
            <i class="bi bi-arrow-left-circle"></i> Randevu Listesi
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Tarih</th>
                <th scope="col">Hizmet</th>
                <th scope="col">Kuaför</th>
                <th scope="col">Notlar</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.RandevuTarihi.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.Hizmet.HizmetAdi</td> 
                        <td>@item.Calisan.Ad_Soyad</td> 
                        <td>@item.Notlar ?? "Yok"</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">Hiç randevunuz yok.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
