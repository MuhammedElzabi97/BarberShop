@model IEnumerable<WebProjesi.Models.Randevu>

@{
    ViewData["Title"] = "Randevular Listesi";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Randevular Listesi</h2>
        <a asp-action="Ekle" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Yeni Randevu
        </a>
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Müşteri Adı</th>
                <th scope="col">Çalışan</th>
                <th scope="col">Hizmet</th>
                <th scope="col">Tarih</th>
                <th scope="col">Durum</th>
                <th scope="col" class="text-center">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var randevu in Model)
            {
                <tr>
                    <td>@randevu.MusteriAdi</td>
                    <td>@randevu.Calisan.Ad_Soyad</td>
                    <td>@randevu.Hizmet.HizmetAdi</td>
                    <td>@randevu.RandevuTarihi.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@randevu.Durum</td>
                    <td class="text-center">
                      
                        <a asp-action="Sil" asp-route-id="@randevu.RandevuID" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
