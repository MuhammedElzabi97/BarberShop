@model WebProjesi.Models.Randevu

@{
    ViewData["Title"] = "Randevu Sil";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white text-center">
                    <h3>Randevu Sil</h3>
                </div>
                <div class="card-body">
                    <p class="text-center">Bu randevuyu silmek istediğinize emin misiniz?</p>
                    <dl class="row">
                        <dt class="col-sm-4">Müşteri Adı</dt>
                        <dd class="col-sm-8">@Model.MusteriAdi</dd>
                        <dt class="col-sm-4">Çalışan</dt>
                        <dd class="col-sm-8">@Model.Calisan.Ad_Soyad</dd>
                        <dt class="col-sm-4">Hizmet</dt>
                        <dd class="col-sm-8">@Model.Hizmet.HizmetAdi</dd>
                        <dt class="col-sm-4">Tarih</dt>
                        <dd class="col-sm-8">@Model.RandevuTarihi.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Geri Dön
                        </a>
                        <form asp-action="Sil" method="post">
                            <input type="hidden" asp-for="RandevuID" />
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Sil
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
