@model WebProjesi.Models.Calisan

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CalisanId" />
    <div class="form-group">
        <label>Ad</label>
        <input asp-for="Ad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Soyad</label>
        <input asp-for="Soyad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Başlangıç Saati</label>
        <input asp-for="BaslangicSaati" type="time" class="form-control" />
    </div>
    <div class="form-group">
        <label>Bitiş Saati</label>
        <input asp-for="BitisSaati" type="time" class="form-control" />
    </div>
    <div class="form-group">
        <label>Hizmetler</label>
        <div>
            @foreach (var hizmet in ViewBag.Hizmetler as List<WebProjesi.Models.Hizmet>)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="SelectedHizmetler" value="@hizmet.HizmetId"
                    @(ViewBag.SelectedHizmetler.Contains(hizmet.HizmetId) ? "checked" : "") />
                    <label class="form-check-label">@hizmet.HizmetAdi</label>
                </div>
            }
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>
