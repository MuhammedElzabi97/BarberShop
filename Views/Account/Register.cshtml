@{
    ViewData["Title"] = "Hesap Oluştur";
}

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card shadow-sm p-4" style="width: 100%; max-width: 400px;">
        <h3 class="text-center mb-4">Hesap Oluştur</h3>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger text-center">Lütfen bilgilerinizi kontrol edin.</div>
        }

        <form method="post" action="/Account/Register">
            <!-- İsim -->
            <div class="mb-3">
                <label for="name" class="form-label">Ad Soyad</label>
                <input type="text" class="form-control" id="name" name="Name" required placeholder="Adınızı giriniz">
            </div>

            <!-- E-posta -->
            <div class="mb-3">
                <label for="email" class="form-label">E-posta</label>
                <input type="email" class="form-control" id="email" name="Email" required placeholder="example@example.com">
            </div>

            <!-- Şifre -->
            <div class="mb-3">
                <label for="password" class="form-label">Şifre</label>
                <input type="password" class="form-control" id="password" name="Password" required placeholder="••••••••">
            </div>

            <!-- Hesap oluştur butonu -->
            <button type="submit" class="btn btn-success w-100">Hesap Oluştur</button>

            <!-- Giriş yap bağlantısı -->
            <div class="mt-3 text-center">
                <a href="/Account/Login" class="text-decoration-none">Zaten bir hesabınız var mı? Giriş Yapın</a>
            </div>
        </form>
    </div>
</div>
